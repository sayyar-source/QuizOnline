@using Microsoft.AspNetCore.Identity
@inject SignInManager<QuizUser> SignInManager
@inject UserManager<QuizUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li>
        <form id="logoutForm" hidden asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        </form>
        <a href="#" onclick="document.getElementById('logoutForm').submit()" title="ÇIKIŞ"><i class="icon fas fa-sign-out-alt fa-2x" style="color: white"></i><span class="nav-label"></span></a>
    </li>
}
else
{
    <li>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" title="GİRİŞ YAP"><i class="icon fas fa-sign-in-alt fa-2x" style="color: white"></i></a>
    </li>
    <li>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" title="ÜYE OL"><i class="icon fas fa-user-plus fa-2x" style="color: white"></i></a>
    </li>
}
