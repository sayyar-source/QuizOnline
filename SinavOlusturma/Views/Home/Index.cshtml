@model ReflectionIT.Mvc.Paging.PagingList<AllQuizzesViewModel>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mx-auto">
    @if (Model.Count() == 0)
    {
        <div class="mx-auto card-holder">
            <div class="quizCard text-center" style="width: 20em;">
                <p style="color:red">Henüz bir sinav uluşmadı</p>
                <a class="nav-link text-dark" asp-area="" asp-controller="Quiz" asp-action="CreateQuiz" title="ایجاد آزمون"><i class="icon fas fa-plus-square fa-2x" style="color: white"></i></a>
            </div>
        </div>
    }
    else
    {
        @foreach (var quiz in Model)
        {
            <div class="col-md-3 mx-auto card-holder">
                <div class="flip-card" style="background: #17cf369e;" >
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            
                            <h5><b style="color:blue;font-size:20px">Sinav</b> </h5>
                            @{
                                var name = quiz.Name.Substring(0, 50) + "  ...";
                             <h4 style="color:black">@name</h4>
                            }
                            
                            @if (@quiz.QuizQuestions.Count == 0)
                            {
                               <p style="color:black">Sinav bulunamadı</p>
                            }
                            else if (@quiz.QuizQuestions.Count == 1)
                            {
                                <p style="color:darkred">@quiz.QuizQuestions.Count Soru</p>
                            }
                            else
                            {
                                <p style="color:darkred">@quiz.QuizQuestions.Count Soru</p>
                            }
                        </div>
                        <div class="flip-card-back">
                            <div style="margin-top: 85px;">
                                <a style="padding: 10px;" asp-action="StartQuiz" asp-controller="Quiz" asp-route-id="@quiz.Id" title="başlama"><i class="icon fas fa-play fa-2x" style="color: white"></i></a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div>
    
</div>


