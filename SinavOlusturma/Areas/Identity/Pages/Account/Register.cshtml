@page
@model RegisterModel
@{ ViewData["Title"] = "Kayıt olmak"; }


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div id="registerModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="modal-body">
                    <div class="row" style="padding:20px">
                        <div class="col-md-12">

                            <b>Yeni bir hesap oluştur</b>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label> Kullanıcı adı</label>
                                <input asp-for="Input.UserName" class="form-control" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>e-posta</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>şifre</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Şifreyi tekrarla</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
    
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Üye Ol</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $('#registerModal').modal('show');
</script>

  