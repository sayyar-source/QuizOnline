@page
@model LoginModel

@{
    ViewData["Title"] = "GIRIŞ";
}

<div id="loginModal" class="modal" tabindex="-1" role="dialog" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
      
            <form id="account" method="post" style="padding:25px"; direction:rtl">
                <b>KULLANICI GIRIŞ</b>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <b><label>Kullanıcı Adı</label></b>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b><label>Şifre</label></b>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Benı Hatırla
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="modal-footer" >
                        <button type="submit" class="btn btn-primary" style="margin-right:10px">GIRIŞ YAP</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">KAPAT</button>
                    </div>
                </div>
                <div class="form-group">
                  
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ÜYE OL</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $('#loginModal').modal('show');
</script>
